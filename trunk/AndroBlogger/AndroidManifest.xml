<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.sadko.androblogger"
      android:versionCode="1" android:versionName="0.5.0">
        
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateProfile"
        		  android:label="Create a new profile">
        </activity>
        <activity android:name=".CreateBlogEntry"
        		  android:label="Create a new blog entry">
        </activity>
        <activity android:name=".PreviewAndPublish"
        		  android:label="Preview and publish blog entry">
        </activity>
        <activity android:name=".ViewBlog"
        		  android:label="View blog entry">
        </activity>
        <activity android:name=".ViewPost"
        		  android:label="View post">
        </activity>
        <activity android:name=".ViewComments"
        		  android:label="View comments">
        </activity>
    </application>
    <uses-permission android:name="android.permission.service.blogger"/>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest> 