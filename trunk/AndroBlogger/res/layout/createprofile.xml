<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout android:id="@+id/MainLayout" 
	android:orientation="vertical"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent">
<TableLayout android:id="@+id/ConfigureLayout" android:layout_height="wrap_content" android:background="@android:drawable/alert_dark_frame" android:padding="15px" android:layout_width="fill_parent">
<TextView android:id="@+id/TextProfileName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Name of profile:" android:textColor="#FFFFFF"/>
<EditText android:id="@+id/ProfileName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="300px"></EditText>
<TextView android:id="@+id/TextUsername" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="Blog username:" 
	android:layout_marginTop="10px" android:textColor="#FFFFFF">
</TextView>

<EditText android:id="@+id/Username" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:width="300px">
</EditText>

<TextView android:id="@+id/TextPassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10px" android:text="Blog password:" android:textColor="#FFFFFF"></TextView>
<EditText android:id="@+id/Password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="300px" android:password="true"></EditText>
</TableLayout><LinearLayout android:id="@+id/LinearLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_gravity="center" android:gravity="center">
<Button android:id="@+id/BackToMainActivity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Back" android:drawableLeft="@drawable/ic_revert" android:width="100px"></Button><Button android:id="@+id/FETCH_BUTTON_ID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Verify" android:drawableLeft="@drawable/ic_update" android:width="100px"></Button>
<Button android:id="@+id/Save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Save" android:drawableLeft="@drawable/ic_save" android:width="100px"></Button>

</LinearLayout>
</LinearLayout>
</ScrollView>

