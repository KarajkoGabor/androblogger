<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/MainLayout"
		android:orientation="vertical" android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:paddingTop="10px">
		<LinearLayout android:id="@+id/LayoutForButtons"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center">
			<Button android:id="@+id/BackToViewBlog" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Back"
				android:drawableLeft="@drawable/ic_revert">
			</Button>
			<Button android:id="@+id/Comments" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Comments">
			</Button>
		</LinearLayout>
		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_width="fill_parent" android:background="@android:drawable/alert_dark_frame"
			android:layout_gravity="center" android:padding="20px">
			<LinearLayout android:id="@+id/LinearLayout03"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Title: ">
				</TextView>
				<TextView android:id="@+id/PostTitle" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Title of post"
					android:textColor="#FFFFFF" android:width="300px" android:gravity="left">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout03"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Author: ">
				</TextView>
				<TextView android:id="@+id/PostAuthor"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:text="Author">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout01"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="ID: ">
				</TextView>
				<TextView android:id="@+id/PostID" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFF"
					android:text="ID of post">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout04"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Publish: ">
				</TextView>
				<TextView android:id="@+id/PostPublishDate"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:text="Publish date">
				</TextView>
			</LinearLayout>
			<LinearLayout android:id="@+id/LinearLayout05"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Update: ">
				</TextView>
				<TextView android:id="@+id/PostUpdateDate"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:text="Update date">
				</TextView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/LinearLayout02"
			android:background="@android:drawable/alert_dark_frame"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:padding="20px" android:layout_height="240px">
			<ScrollView android:id="@+id/sv" android:layout_width="fill_parent"
				android:layout_height="200px">
				<TextView android:id="@+id/PostContent"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="Content of post" android:textColor="#FFFFFF">
				</TextView>
			</ScrollView>
		</LinearLayout>










	</LinearLayout>
</ScrollView>
