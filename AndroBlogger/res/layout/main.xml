<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/MainLayout"
		android:orientation="vertical" android:layout_height="fill_parent"
		android:layout_width="fill_parent">
		<LinearLayout android:id="@+id/LayoutForLogo"
			android:layout_height="wrap_content" android:orientation="horizontal"
			android:layout_gravity="center" android:layout_width="fill_parent"
			android:gravity="center" android:background="@android:drawable/alert_dark_frame">
			<ImageView android:id="@+id/Logo" android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_width="wrap_content" android:layout_margin="5px" android:src="@drawable/logoandroblogger"></ImageView>
		</LinearLayout>
		<LinearLayout android:layout_height="wrap_content"
			android:orientation="vertical" android:background="@android:drawable/alert_dark_frame"
			android:id="@+id/LayoutForButtons" android:layout_width="fill_parent"
			android:layout_gravity="center" android:gravity="center"
			android:padding="15px">

			<Button android:id="@+id/CreateNewPost" android:layout_height="wrap_content"
				android:width="300px" android:text="Create new post"
				android:layout_width="fill_parent" android:layout_marginTop="15px"
				android:drawableLeft="@drawable/edit"></Button>
			<Button android:id="@+id/ViewBlog" android:layout_height="wrap_content"
				android:layout_marginTop="10px" android:width="300px" android:text="View blog"
				android:layout_width="fill_parent" android:drawableLeft="@drawable/view"></Button>
			<Button android:layout_height="wrap_content" android:width="300px"
				android:layout_width="fill_parent" android:id="@+id/Settings"
				android:text="Settings" android:layout_marginTop="10px"
				android:drawableLeft="@drawable/settings"></Button>
			<Button android:id="@+id/Exit" android:layout_height="wrap_content"
				android:width="300px" android:text="Exit" android:layout_marginTop="10px"
				android:layout_width="fill_parent" android:drawableLeft="@drawable/exit"></Button>
		</LinearLayout>
	</LinearLayout>

</ScrollView>
